doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        title="CRUD json"
        link(rel="stylesheet", type="text/css", href="main.css")
    body
        h1 CRUD Json App
        form#json(action="/json", method="post")
            span.msg #{msg["json"]}
            label(for="jsonInput") Название json файл
                input#jsonInput(type="text", name="json", required)
            button#jsonBtn(name="action", value="addJson") Загрузка Json
        if items
            h2#read Read #{title}
            table
                tr
                    td id
                    td Наименование
                    td Адрес
                    td Телефон
                    td Действия
                each item, index in items
                    tr
                        td= index
                        td= item["full_name"]
                        td= item["address"]
                        td= item["phone"]
                        td
                            a.update(href="/update/?id="+index) Update
                            a.delete(href="/delete/?id="+index) Delete
            include create.pug

            if update['id']
                include update.pug

        script(src="alerts.js")